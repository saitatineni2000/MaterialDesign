<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.example.saisandeep.materialdesign.NavigationDrawerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_layout"
        android:background="#F88C00"

        >

    <ImageView

        android:layout_marginTop="@dimen/drawer_margin_top"
        android:layout_marginBottom="@dimen/drawer_margin_bottom"
        android:layout_width="@dimen/image_width"
        android:layout_height="140dp"
        android:src="@drawable/ic_next"
        />

</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recylerview_layout"
        android:layout_below="@+id/container_layout"
        />

</RelativeLayout>
